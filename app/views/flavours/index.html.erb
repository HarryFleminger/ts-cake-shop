<%= render "shared/request_header" %>
<div class="request-form-container">
  <div class="left-request-form">
  <div class="design-ideas">
    <div class="design-idea-photo">
      <%= image_tag("custom_1", class: "") %>
    </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_2", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_3", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_4", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_5", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_6", class: "") %>
      </div>
  </div>
  </div>
  <div class="right-request-form" data-controller="flavour-selection">
  <div class="flavour-links-flex">
      <h2>Choose a flavour</h2>
      <% @flavours.each do |flavour| %>
        <div class="flavour-button" data-target="flavour-selection.flavourLink" data-action="click->flavour-selection#selectFlavour">
          <%= link_to flavour.name, new_custom_cake_flavour_design_detail_path(@custom_cake, flavour), style: "text-decoration: none; color: black;", data: { href: new_custom_cake_flavour_design_detail_path(@custom_cake, flavour) }  %>
          <p class="d-none"><%= flavour.description %></p>
        </div>
      <% end %>
      <button class="d-none next-button" data-target="flavour-selection.button" data-action="click->flavour-selection#followLink">Select this flavour</button>
    </div>
  </div>
</div>
