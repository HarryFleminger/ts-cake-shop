<%= render "shared/request_header" %>
<div class="form-header-back">
    <%= link_to custom_cakes_path, class: "back-button" do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
</div>
<div class="form-header-bread">
    <svg width="12" height="12" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="7" cy="7" r="7" fill="black"/>
    </svg>
    <svg width="12" height="12" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="7" cy="7" r="7" fill="#D9D9D9"/>
    </svg>
    <svg width="12" height="12" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
     <circle cx="7" cy="7" r="7" fill="#D9D9D9"/>
    </svg>
</div>
<div class="request-form-container">
  <div class="left-request-form">
  <div class="design-ideas">
    <div class="design-idea-photo">
      <%= image_tag("custom_1.jpg", class: "") %>
    </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_2.jpg", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_3.jpg", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_4.jpg", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_5.jpg", class: "") %>
      </div>
        <div class="design-idea-photo">
      <%= image_tag("custom_6.jpg", class: "") %>
      </div>
  </div>
  </div>
  <div class="right-request-form" data-controller="flavour-selection">
  <div class="flavour-links-flex">
      <h2>Choose a flavour</h2>
      <% @flavours.each do |flavour| %>
        <div class="flavour-button" data-target="flavour-selection.flavourLink" data-action="click->flavour-selection#selectFlavour">
          <%= link_to flavour.name, new_custom_cake_flavour_design_detail_path(@custom_cake, flavour), style: "text-decoration: none; color: black;", data: { href: new_custom_cake_flavour_design_detail_path(@custom_cake, flavour) }  %>
          <p class="d-none"><%= flavour.description %></p>
        </div>
      <% end %>
      <button class="d-none next-button" data-target="flavour-selection.button" data-action="click->flavour-selection#followLink">Next</button>
    </div>
  </div>
</div>
