<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1><%= @product.name %></h1>
      <p><%=@product.description  %></p>
      <p>Amount<%= @product.price %></p>
      <%# output all the imges %>
        <%# <% @product.photos.each do |photo|
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill
        <% end  %>
      <%= cl_image_tag @product.photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= simple_form_for([@product, @line_item], url: product_line_items_path(@product) ) do |f| %>
        <div data-controller="increments">
        <%= f.input :quantity, input_html: {data: { target: "increments.quantity" }, value: 1} %>
          <a href="#" class="increment" data-action="click->increments#increment">
            <i class="fa fa-plus "></i>
          </a>
          <a href="#" class="decrement" data-action="click->increments#decrement" >
            <i class="fa fa-minus"></i>
          </a>
          <span ></span>
        <%= f.input :comment, prompt: "If you'd like a custom cake please descripe it here" %>
        <%= f.submit "Add to basket" %>
      <% end %>
      <% if current_user.try(:admin?) %>
        <%= link_to "edit", edit_product_path(@product) %>
      <% end %>
    </div>
  </div>
</div>
