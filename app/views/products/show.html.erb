<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1><%= @product.name %></h1>
      <p><%=@product.description  %></p>
      <p>Amount<%= @product.price %></p>
      <%# output all the imges %>
        <%# <% @product.photos.each do |photo|
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill
        <% end  %>
      <%= cl_image_tag @product.photos.first.key, height: 300, width: 400, crop: :fill %>
      <%= simple_form_for([@product, @line_item], url: product_line_items_path(@product) ) do |f| %>
      <%= f.input :quantity, collection: 1..10, selected: 1 %>
      <%= f.submit "Add to basket" %>
      <% end %>
      <%= link_to "edit", edit_product_path(@product) %>
    </div>
  </div>
</div>
