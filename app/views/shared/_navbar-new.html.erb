    <% if user_signed_in? %>
      <% if current_user.orders.where(state: 'pending').last.present? %>
          <%= link_to  "/orders/#{current_user.orders.last.id}", class: "nav-link" do %>
            <%= image_tag "basket-icon.svg", class: "avatar dropdown-toggle"%>
          <% end %>
