<div class="navbar-container">
  <div class="navbar-flexbox">
  <div class="sub-box">
    <%= link_to "Get in touch", "#", class: "nav-link" %>
    <%= link_to "About us", "#", class: "nav-link" %>
  </div>
    <div class="sub-box">
        <%# <% if current_user.admin? %>
